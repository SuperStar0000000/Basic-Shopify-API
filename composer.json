{
  "name": "osiset/basic-shopify-api",
  "type": "library",
  "description": "A basic Shopify API wrapper with REST and GraphQL support.",
  "keywords": ["api", "shopify", "rest", "graphql"],
  "license": "MIT",
  "authors": [
    {
      "name": "Tyler King",
      "email": "tyler@osiset.com"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "guzzlehttp/guzzle": "^6.3",
    "guzzlehttp/promises": "^1.3",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2",
    "phpdocumentor/phpdocumentor": "2.*",
    "satooshi/php-coveralls": "~1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "test": "bin/phpunit"
  },
  "autoload": {
    "files": ["src/Osiset/BasicShopifyAPI.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Osiset\\Test\\": "test"
    }
  },
  "config": { "bin-dir": "bin" }
}
